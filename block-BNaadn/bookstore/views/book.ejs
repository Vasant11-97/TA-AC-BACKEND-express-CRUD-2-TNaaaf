<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="container">
    <header class="header">
      <nav>
        <ul class="flex justify-content align-item">
          <li>
            <a href="/">
              <button>Home</button>
            </a>
          </li>
          <li>
            <a href="/book/new">
              <button>Add Books</button>
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="main">
      <h1>Welcome to the AltBook Store.</h1>
      <div class="flex justify-content align-item">
          <% book.forEach((b) => { %>
            <div class="book">
                <h2>Title: <%= b.title%></h2>
                <p>Summary: <%= b.summary%></p>
                <p>Pages: <%= b.pages%></p>
                <p>Publication: <%= b.publication%></p>
                <a href="/book/<%= b.id%>">
                    <button>Read More</button>
                </a>
            </div>
          <% }) %>
      </div>
      </div>
    </main>
  </body>
</html>
